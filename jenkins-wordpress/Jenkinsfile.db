pipeline {
    agent any
    stages {
        stage('Delete workspace before build starts') {
            steps {
                echo 'Deleting workspace'
                deleteDir()
            }
        }
        stage('Checkout') {
            steps{
                git branch: 'main',
                    url: 'https://github.com/timthecat500/storybook.git'
                }
        }
        stage('Build docker image') {
            steps{
                dir('jenkins-wordpress/db') {
                    sh "docker build -t np/mysql-5.7:${BUILD_NUMBER} ."
                }
            }
        }
        stage('Set tag:latest on docker image') {
            steps{
                sh "docker tag np/mysql-5.7:${BUILD_NUMBER} np/mysql-5.7:latest"
                sh 'docker images'
            }
        }
    }
}
